{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"sourceMap": true,
		"baseUrl": ".",
		// "paths": {
		//     "@entertainhub/utils/*": ["packages/utils/src/*"],
		//     "@entertainhub/types/*": ["packages/types/src/*"],
		//     "@entertainhub/ui/*": ["packages/ui/src/*"]
		// },
		"outDir": "dist"
	},
	"exclude": ["node_modules", "dist"]
}

