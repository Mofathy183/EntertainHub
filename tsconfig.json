{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@api/*": ["apps/api/src/*"],
			"@web/*": ["apps/web/src/*"]
		},
		"outDir": "dist"
	},
	"exclude": ["node_modules", "dist"]
}
